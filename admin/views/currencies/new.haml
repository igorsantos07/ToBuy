.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:currencies, :index)
      %li.active=link_to pat(:new), url(:currencies, :new)
  .content
    %h2.title
      =pat(:new)
      =mt(:currency)
    .inner
      -form_for :currency, url(:currencies, :create), :class => :form do |f|
        =partial "currencies/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")