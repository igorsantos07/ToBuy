.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:tracking_systems, :index)
      %li=link_to pat(:new), url(:tracking_systems, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:tracking_systems)
    .inner
      %table.table
        %tr
          %th.first=mat(:tracking_system, :id)
          %th=mat(:tracking_system, :name)
          %th=mat(:tracking_system, :url)
          %th=mat(:tracking_system, :method)
          %th.last="&nbsp;"
        -@tracking_systems.each do |tracking_system|
          %tr
            %td.first=tracking_system.id
            %td=tracking_system.name
            %td=tracking_system.url
            %td=tracking_system.method
            %td.last
              =button_to pat(:edit), url(:tracking_systems, :edit, :id => tracking_system.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:tracking_systems, :destroy, :id => tracking_system.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')"
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")